{% extends 'base.html.twig' %}
{% block title %}Connexion!{% endblock %}
{% block body%}
<section class="w-100 p-4 d-flex justify-content-center pb-4 border">
        <div style="width: 26rem;">
          <!-- Pills navs -->
          <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
            <li class="nav-item" role="presentation">
              <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" href="#pills-login" role="tab" aria-controls="pills-login" aria-selected="true">Connexion</a>
            </li>
          </ul>
          <!-- Pills navs -->

          <!-- Pills content -->
          <div class="tab-content">
           
            <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
             	<form class="row contact_form" action="#" method="post" novalidate="novalidate">
                 {% if error %}
								<div class="alert alert-danger">
									{{ error.messageKey|trans(error.messageData, 'security') }}
								</div>
							{% endif %}
              {% if app.user %}
								<div class="mb-3">
									Vous etes connecter comme
									{{ app.user.userIdentifier }},
									<a href="{{ path('app_logout') }}">Deconnexion</a>
								</div>
							{% endif %}
                
                <!-- Email input -->
                <div class="form-outline mb-4">
                 <input type="email" class="form-control" id="inputEmail" name="email" value="{{ last_username }}" placeholder="Email" autocomplete="email" required autofocus>
                  <label class="form-label" for="registerEmail" style="margin-left: 0px;">Email</label>
                <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 8px;"></div><div class="form-notch-trailing"></div></div></div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                  <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Mot de passe">
                  <label class="form-label" for="registerPassword" style="margin-left: 0px;">Mot de passe</label>
                <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 8px;"></div><div class="form-notch-trailing"></div></div></div>

				<input
          type="hidden"
          name="_csrf_token"
          value="{{ csrf_token('authenticate') }}"
        />


                <!-- Submit button -->
                <button type="submit" class="btn text-white btn-block mb-3" style="background-color:#1A237E">Sign in</button>
                <a class="btn text-white btn-block mb-3" href="{{ path('facebook_connect') }}" style="background-color:#1A237E">Se connecter avec facebook</a>

                <a class="btn text-white btn-block mb-3" href="{{ path('google_connect') }}" style="background-color:red">Se connecter avec gmail</a>
              </form>
            </div>
          </div>
          <!-- Pills content -->
        </div>
      </section>
{% endblock %}

