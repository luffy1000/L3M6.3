{% extends 'base.html.twig' %}

{% block title %}Liste des destinations{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>Liste des destinations</h1>
            </div>
            {% for destination in destinations %}
                <div class="col-3 mb-3">
                    <article class="card h-100">
                        <img src="{{ asset('assets/uploads/destinations/mini/300x300-' ~ destination.images[0].name ) }}" class="card-img-top" alt="{{ destination.destination }}">
                        <div class="card-body">
                            <h2 class="card-title">{{ destination.destination }}</h2>
                            <p class="card-text">{{ destination.description }}</p>
                            <a href="{{ path('details', {"slug": destination.slug }) }}" class="btn btn-primary">Voir les d√©tails</a>
                        </div>
                    </article>
                </div>
            {% endfor %}
            
        </section>
    </main>
{% endblock %}